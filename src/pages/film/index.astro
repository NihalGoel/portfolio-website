---
import BaseLayout from '../../layouts/BaseLayout.astro';
import VideoCard from '../../components/video/VideoCard.astro';
import { getCollection } from 'astro:content';

const films = (await getCollection('films')).sort((a, b) => a.data.order - b.data.order);
---

<BaseLayout title="Film â€” Elena Vasquez">
  <section class="film-page container">
    <header class="page-header">
      <h1>Film</h1>
      <p>Experimental and documentary moving image work</p>
    </header>
    <div class="film-grid">
      {films.map((film) => (
        <VideoCard
          title={film.data.title}
          description={film.data.description}
          thumbnail={film.data.thumbnail}
          slug={film.id}
          duration={film.data.duration}
          date={film.data.date}
        />
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .film-page {
    padding: 8rem 0 4rem;
  }

  .page-header {
    margin-bottom: 3rem;
  }

  .page-header h1 {
    margin-bottom: 0.75rem;
  }

  .page-header p {
    font-size: 1rem;
    opacity: 0.5;
  }

  .film-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 3rem 2rem;
  }

  @media (max-width: 768px) {
    .film-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
