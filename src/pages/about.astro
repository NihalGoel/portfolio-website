---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="About — Nihal Goel">
  <section class="about-page">
    <div class="about-content" id="about-content">
      <h1 class="about-role">Filmmaker · Visual Artist</h1>

      <div class="about-bio">
        <p>
          Nihal Goel (1996) is an Amsterdam-based visual artist whose work unfolds through film, installation, and performance. Rooted in encounters with landscape and bodily exertion, his practice reflects on perception, solitude, and the thresholds between the physical and the internal.
        </p>
      </div>

      <div class="cv-section">
        <h2 class="cv-heading">Education</h2>
        <div class="cv-item">
          <span class="cv-year">2025</span>
          <div class="cv-details">
            <span class="cv-title">Master of Arts in Fine Art & Design: Lens-Based Media</span>
            <span class="cv-sub">Piet Zwart Institute, Rotterdam</span>
          </div>
        </div>
        <div class="cv-item">
          <span class="cv-year">2018</span>
          <div class="cv-details">
            <span class="cv-title">BSc Computer Science and Engineering</span>
            <span class="cv-sub">Eindhoven University of Technology, Eindhoven</span>
          </div>
        </div>
      </div>

      <div class="cv-section">
        <h2 class="cv-heading">Exhibitions</h2>
        <div class="cv-item">
          <span class="cv-year">2025</span>
          <div class="cv-details">
            <span class="cv-title">Exhibition Title</span>
            <span class="cv-sub">Venue, City</span>
          </div>
        </div>
        <div class="cv-item">
          <span class="cv-year">2024</span>
          <div class="cv-details">
            <span class="cv-title">Exhibition Title</span>
            <span class="cv-sub">Venue, City</span>
          </div>
        </div>
        <div class="cv-item">
          <span class="cv-year">2023</span>
          <div class="cv-details">
            <span class="cv-title">Exhibition Title</span>
            <span class="cv-sub">Venue, City</span>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .about-page {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 80px);
    padding: 4rem 2rem;
  }

  .about-content {
    max-width: 600px;
    text-align: center;
    opacity: 0;
    transform: translateY(30px);
  }

  .about-role {
    font-family: 'Barlow', Helvetica, Arial, sans-serif;
    font-size: clamp(1rem, 3vw, 1.75rem);
    font-weight: 700;
    color: #e8e4df;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 2.5rem;
  }

  .about-bio {
    margin-bottom: 3rem;
  }

  .about-bio p {
    font-family: 'Barlow', Helvetica, Arial, sans-serif;
    font-size: 1.15rem;
    font-weight: 300;
    line-height: 1.8;
    color: #e8e4df;
    opacity: 0.85;
  }

  .cv-section {
    margin-bottom: 2rem;
    text-align: left;
  }

  .cv-heading {
    font-family: 'Barlow Condensed', Helvetica, Arial, sans-serif;
    font-size: 0.85rem;
    font-weight: 400;
    color: #e8e4df;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    opacity: 0.4;
    margin-bottom: 1.25rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(232, 228, 223, 0.1);
  }

  .cv-item {
    display: grid;
    grid-template-columns: 4rem 1fr;
    gap: 1.5rem;
    margin-bottom: 1rem;
  }

  .cv-year {
    font-family: 'Barlow Condensed', Helvetica, Arial, sans-serif;
    font-size: 0.9rem;
    color: #e8e4df;
    opacity: 0.35;
  }

  .cv-details {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }

  .cv-title {
    font-family: 'Barlow', Helvetica, Arial, sans-serif;
    font-size: 1rem;
    font-weight: 400;
    color: #e8e4df;
    opacity: 0.9;
  }

  .cv-sub {
    font-family: 'Barlow', Helvetica, Arial, sans-serif;
    font-size: 0.85rem;
    font-weight: 300;
    color: #e8e4df;
    opacity: 0.5;
  }

  @media (max-width: 768px) {
    .about-page {
      padding: 3rem 1.5rem;
    }

    .cv-item {
      grid-template-columns: 3.5rem 1fr;
      gap: 1rem;
    }
  }
</style>

<script>
  import gsap from 'gsap';

  function animatePage() {
    const content = document.getElementById('about-content');

    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    if (prefersReducedMotion) {
      if (content) gsap.set(content, { opacity: 1, y: 0 });
      return;
    }

    if (content) {
      gsap.to(content, {
        opacity: 1,
        y: 0,
        duration: 0.8,
        delay: 0.3,
        ease: 'power3.out',
      });
    }
  }

  animatePage();
  document.addEventListener('astro:page-load', animatePage);
</script>
