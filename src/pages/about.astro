<style>
  .about-page {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 80px);
    padding: 4rem 2rem;
  }

  .about-content {
    max-width: 600px;
    text-align: center;
    opacity: 0;
    transform: translateY(30px);
  }

  .about-name {
    font-family: 'Barlow', Helvetica, Arial, sans-serif;
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 800;
    color: #e8e4df;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: 0.5rem;
  }

  .about-role {
    font-family: 'Barlow Condensed', Helvetica, Arial, sans-serif;
    font-size: 1.1rem;
    font-weight: 300;
    color: #e8e4df;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    opacity: 0.5;
    margin-bottom: 2.5rem;
  }

  .about-bio {
    margin-bottom: 3rem;
  }

  .about-bio p {
    font-family: 'Barlow', Helvetica, Arial, sans-serif;
    font-size: 1.15rem;
    font-weight: 300;
    line-height: 1.8;
    color: #e8e4df;
    opacity: 0.85;
  }

  .cv-section {
    margin-bottom: 3rem;
    text-align: left;
  }

  .cv-heading {
    font-family: 'Barlow Condensed', Helvetica, Arial, sans-serif;
    font-size: 0.85rem;
    font-weight: 400;
    color: #e8e4df;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    opacity: 0.4;
    margin-bottom: 1.25rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(232, 228, 223, 0.1);
  }

  .cv-item {
    display: grid;
    grid-template-columns: 4rem 1fr;
    gap: 1.5rem;
    margin-bottom: 1rem;
  }

  .cv-year {
    font-family: 'Barlow Condensed', Helvetica, Arial, sans-serif;
    font-size: 0.9rem;
    color: #e8e4df;
    opacity: 0.35;
  }

  .cv-details {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }

  .cv-title {
    font-family: 'Barlow', Helvetica, Arial, sans-serif;
    font-size: 1rem;
    font-weight: 400;
    color: #e8e4df;
    opacity: 0.9;
  }

  .cv-sub {
    font-family: 'Barlow', Helvetica, Arial, sans-serif;
    font-size: 0.85rem;
    font-weight: 300;
    color: #e8e4df;
    opacity: 0.5;
  }

  .about-contact {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .contact-link {
    font-family: 'Barlow', Helvetica, Arial, sans-serif;
    font-size: 1rem;
    font-weight: 400;
    color: #e8e4df;
    letter-spacing: 0.05em;
    padding: 1rem 2.5rem;
    background: rgba(232, 228, 223, 0.08);
    border: none;
    border-radius: 2px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .contact-link:hover {
    background: rgba(232, 228, 223, 0.15);
    color: #e8e4df;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
  }

  .social-link {
    color: #e8e4df;
    opacity: 0.5;
    transition: opacity 0.3s ease, transform 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .social-link:hover {
    opacity: 1;
    color: #e8e4df;
    transform: scale(1.1);
  }

  .social-link svg {
    width: 22px;
    height: 22px;
  }

  @media (max-width: 768px) {
    .about-page {
      padding: 3rem 1.5rem;
    }

    .cv-item {
      grid-template-columns: 3.5rem 1fr;
      gap: 1rem;
    }
  }
</style>

<script>
  import gsap from 'gsap';

  function animatePage() {
    const content = document.getElementById('about-content');

    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    if (prefersReducedMotion) {
      if (content) gsap.set(content, { opacity: 1, y: 0 });
      return;
    }

    if (content) {
      gsap.to(content, {
        opacity: 1,
        y: 0,
        duration: 0.8,
        delay: 0.3,
        ease: 'power3.out',
      });
    }
  }

  animatePage();
  document.addEventListener('astro:page-load', animatePage);

  // Copy email to clipboard
  function initCopyEmail() {
    const btn = document.getElementById('copy-email');
    if (!btn) return;

    const email = btn.dataset.email || '';
    let timeoutId: ReturnType<typeof setTimeout> | null = null;

    btn.addEventListener('click', async () => {
      // Clear any existing timeout
      if (timeoutId) {
        clearTimeout(timeoutId);
      }

      try {
        await navigator.clipboard.writeText(email);
      } catch (err) {
        // Fallback for older browsers
        const textarea = document.createElement('textarea');
        textarea.value = email;
        document.body.appendChild(textarea);
        textarea.select();
        document.execCommand('copy');
        document.body.removeChild(textarea);
      }

      btn.textContent = 'Copied!';
      timeoutId = setTimeout(() => {
        btn.textContent = email;
        timeoutId = null;
      }, 2000);
    });
  }

  initCopyEmail();
  document.addEventListener('astro:page-load', initCopyEmail);
</script>
