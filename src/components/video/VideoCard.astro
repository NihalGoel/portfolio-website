---
interface Props {
  title: string;
  description: string;
  thumbnail: string;
  slug: string;
  duration: string;
  date: string;
}

const { title, description, thumbnail, slug, duration, date } = Astro.props;
---

<a href={`/film/${slug}`} class="video-card" data-cursor-hover>
  <div class="video-card__thumb">
    <img src={thumbnail} alt={title} loading="lazy" />
    <span class="video-card__duration">{duration}</span>
  </div>
  <div class="video-card__info">
    <span class="video-card__date">{date}</span>
    <h3 class="video-card__title">{title}</h3>
    <p class="video-card__desc">{description}</p>
  </div>
</a>

<style>
  .video-card {
    display: block;
  }

  .video-card__thumb {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: var(--color-surface);
  }

  .video-card__thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-smooth);
  }

  .video-card:hover .video-card__thumb img {
    transform: scale(1.05);
  }

  .video-card__duration {
    position: absolute;
    bottom: 0.75rem;
    right: 0.75rem;
    font-size: 0.75rem;
    padding: 0.2rem 0.5rem;
    background: rgba(10, 10, 10, 0.8);
    border: 1px solid rgba(232, 228, 223, 0.1);
  }

  .video-card__info {
    padding: 1rem 0;
  }

  .video-card__date {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
  }

  .video-card__title {
    font-family: var(--font-display);
    font-size: 1.25rem;
    margin: 0.3rem 0 0.5rem;
  }

  .video-card__desc {
    font-size: 0.85rem;
    opacity: 0.6;
    line-height: 1.5;
  }
</style>
