---
interface Props {
  variant?: 'dark' | 'light';
}

const { variant = 'dark' } = Astro.props;
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/work', label: 'Work' },
  { href: '/about', label: 'About' },
];
---

<nav class:list={['top-nav', `top-nav--${variant}`]} id="main-nav">
  <a href="/" class="top-nav__name">Nihal Goel</a>
  <div class="top-nav__links">
    {navLinks.map((link) => (
      <a
        href={link.href}
        class:list={['top-nav__link', { 'is-active': currentPath === link.href || currentPath.startsWith(link.href + '/') }]}
      >
        {link.label}
      </a>
    ))}
  </div>
</nav>

<style>
  .top-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 3rem;
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(232, 228, 223, 0.08);
    opacity: 0;
    transform: translateY(-20px);
  }

  .top-nav--dark {
    background: rgba(90, 90, 90, 0.7);
  }

  .top-nav--light {
    background: rgba(90, 90, 90, 0.7);
  }

  .top-nav__name {
    font-family: 'Barlow', Helvetica, Arial, sans-serif;
    font-size: 1.75rem;
    font-weight: 800;
    color: #e8e4df;
    text-decoration: none;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    transition: opacity 0.3s ease;
  }

  .top-nav__name:hover {
    opacity: 0.7;
    color: #e8e4df;
  }

  .top-nav__links {
    display: flex;
    gap: 2.5rem;
  }

  .top-nav__link {
    font-family: 'Barlow Condensed', Helvetica, Arial, sans-serif;
    font-size: 1.2rem;
    font-weight: 400;
    color: #e8e4df;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    position: relative;
    display: inline-block;
    min-width: 5em;
    text-align: center;
    transition: letter-spacing 1.2s cubic-bezier(0.23, 1, 0.32, 1),
                opacity 0.3s ease;
  }

  .top-nav__link:hover {
    letter-spacing: 0.5em;
    color: #e8e4df;
  }

  .top-nav__link.is-active {
    opacity: 1;
  }

  .top-nav__link.is-active::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--color-accent, #c0392b);
  }

  @media (max-width: 768px) {
    .top-nav {
      flex-direction: column;
      gap: 0.75rem;
      padding: 1rem 1.5rem;
    }

    .top-nav__name {
      font-size: 1.4rem;
    }

    .top-nav__links {
      gap: 1.5rem;
    }

    .top-nav__link {
      font-size: 1rem;
    }
  }
</style>

<script>
  import gsap from 'gsap';

  function initTopNav() {
    const nav = document.getElementById('main-nav');
    if (!nav) return;

    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    if (prefersReducedMotion) {
      gsap.set(nav, { opacity: 1, y: 0 });
    } else {
      gsap.to(nav, {
        opacity: 1,
        y: 0,
        duration: 0.8,
        delay: 0.3,
        ease: 'power3.out',
      });
    }
  }

  initTopNav();
  document.addEventListener('astro:page-load', initTopNav);
</script>
